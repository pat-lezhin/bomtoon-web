---
import "../styles/global.css";

// 아이콘 불러오기
import IconCalendar from "../assets/icons/calendar.svg";
import IconPhotos from "../assets/icons/photos.svg";
import IconNotes from "../assets/icons/notes.svg";
import IconSettings from "../assets/icons/settings.svg";

// 👇 main.js 파일의 최종 경로를 빌드 시점에 명시적으로 생성합니다.
const mainScriptPath = new URL('../lib/main.js', import.meta.url).pathname;
---
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <title>봄툰 모바일 UI</title>
  </head>

  <body data-qa="true">
    <div class="stage">
      <button class="qa-back qa-only" id="qaBack" aria-label="뒤로 가기">←</button>

      <div class="device-wrap">
        <div class="iphone" role="region" aria-label="iPhone mockup">
          <div class="island" aria-hidden="true"></div>
          <div class="screen">
            <div class="statusbar">
              <div id="sb-time">9:41</div>
              <div>LTE • 🔋 100%</div>
            </div>

            <section class="lock" id="lock">
              <div class="clock" id="lock-clock">9:41</div>
              <div class="date" id="lock-date">2025년 04월 01일 (화)</div>
              <div class="hint">알림 외 영역 탭 또는 위로 스와이프 → 홈 화면</div>
            </section>

            <section class="home" id="home" hidden>
              <div class="grid">
                <button class="app-tile" data-app="cal">
                  <div class="icon"><IconCalendar aria-hidden="true" /></div>
                  <div class="label">Calendar</div>
                </button>

                <button class="app-tile" data-app="gallery">
                  <div class="icon"><IconPhotos aria-hidden="true" /></div>
                  <div class="label">Gallery</div>
                </button>

                <button class="app-tile" data-app="note">
                  <div class="icon"><IconNotes aria-hidden="true" /></div>
                  <div class="label">Notes</div>
                </button>

                <button class="app-tile" data-app="settings">
                  <div class="icon"><IconSettings aria-hidden="true" /></div>
                  <div class="label">Settings</div>
                </button>
              </div>
            </section>
          </div>
          </div>
      </div>
    </div>
    
    <script src="../lib/main.js"></script>
  </body>
</html>